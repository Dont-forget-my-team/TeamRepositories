<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#6633CC"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 상단 상태바 (invisible) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/starIcon"
            android:src="@drawable/star_png_removebg"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:layout_toStartOf="@+id/settingsIcon"
            android:layout_toEndOf="@+id/starIcon"
            android:background="@drawable/rounded_background"
            android:padding="8dp"
            android:text="★ 300"
            android:textColor="#000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/settingsIcon"
            android:src="@drawable/setting"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="0dp">

        <!-- CardView 안에 PieChart -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="false"
            android:layout_margin="8dp">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/overlayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0월 소비 비율"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="top|center"
            android:layout_marginTop="24dp"
            android:shadowColor="#66000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />
    </FrameLayout>

    <!-- PieChart 아래 랭킹 표시 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:background="@android:color/transparent">

        <!-- 제목: 랭킹 -->
        <TextView
            android:id="@+id/rankingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chart Rankings"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <!-- 1위 항목 -->
        <TextView
            android:id="@+id/rank1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. -"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="2dp" />

        <!-- 2위 항목 -->
        <TextView
            android:id="@+id/rank2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. -"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="2dp" />

        <!-- 3위 항목 -->
        <TextView
            android:id="@+id/rank3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. -"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>
</LinearLayout>
